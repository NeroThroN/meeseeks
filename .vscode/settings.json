{
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.vscode": true,
    ".dart_tool": true,
    ".idea": true,
    "build": true,
    ".flutter-plugins*": true,
    ".metadata": true,
    "**.log": true,
    ".gitignore": true,
    "*.iml": true,
    "**/pubspec.lock": true,
    ".firebaserc": true,
    "firebase.json": true,
    "android": true,
    "ios": true,
    "web": true,
    "linux": true,
    "macos": true,
    "windows": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "firebase.json": ".firebaserc",
    "pubspec.yaml": "pubspec.lock,analysis_options.yaml",
    ".metadata": ".flutter-plugins,.flutter-plugins-dependencies",
  },
  "search.exclude": {
    "build": true,
    "android": true,
    "ios": true,
    "web": true,
    "linux": true,
    "macos": true,
    "windows": true,
  }
}